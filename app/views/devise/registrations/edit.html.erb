<div class="top-content edit-page">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 text">
          <h1><strong><a href="/">MusCloud</a></strong> Edit <%= resource_name.to_s.humanize %></h1>
          <div class="description">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <div class="form-box">
            <div class="form-top">
              <div class="form-top-left">
                <h3>Edit your <strong><a href="/">MusCloud</a></strong> profile</h3>
              </div>
              <div class="form-top-right">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
              </div>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
                <div class="form-bottom">
                  <%= f.error_notification %>
                  <form role="form" class="login-form">
                    <div class="form-group">
                      <%= f.input :username, required: true, autofocus: true, :class => "form-username form-control", :id => "form-username" %>
                    </div>
                    <div class="form-group">
                      <%= f.input :email, required: true, :class => "form-email form-control", :id => "form-email" %>
                    </div>
                    <div class="form-group">
                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                      <% end %>
                      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, :class => "form-password form-control", :id => "form-password" %>
                      <%= f.input :password_confirmation, required: false %>
                    </div>
                    <%= f.button :submit, "Update", :class => "btn btn-block btn-login btn-link-1" %>
                  </form>
                  <div class="row">
                    <div class="col-sm-8 col-sm-offset-3 text">
                      <div class="description">
                        <p><%= link_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %>
                        </p>
                        <p><%= link_to "Back", :back %></p>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
